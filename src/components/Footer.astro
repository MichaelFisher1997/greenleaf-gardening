---
const currentYear = new Date().getFullYear();
const footerLinks = [
  {
    title: 'Services',
    links: [
      { name: 'Lawn Care', href: '/services#lawn-care' },
      { name: 'Garden Design', href: '/services#garden-design' },
      { name: 'Landscaping', href: '/services#landscaping' },
      { name: 'Tree & Shrub Care', href: '/services#tree-care' },
    ],
  },
  {
    title: 'Company',
    links: [
      { name: 'About Us', href: '/about' },
      { name: 'Our Team', href: '/about#team' },
      { name: 'Testimonials', href: '/about#testimonials' },
      { name: 'Careers', href: '/careers' },
    ],
  },
  {
    title: 'Support',
    links: [
      { name: 'Contact Us', href: '/contact' },
      { name: 'FAQs', href: '/faq' },
      { name: 'Privacy Policy', href: '/privacy' },
      { name: 'Terms of Service', href: '/terms' },
    ],
  },
];

const socialLinks = [
  { name: 'Facebook', href: '#', icon: 'facebook' },
  { name: 'Instagram', href: '#', icon: 'instagram' },
  { name: 'Twitter', href: '#', icon: 'twitter' },
  { name: 'Pinterest', href: '#', icon: 'pinterest' },
];
---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="space-y-8 xl:col-span-1">
        <div class="flex items-center">
          <span class="text-2xl font-bold text-primary">
            <span class="text-primary-dark">Green</span>Leaf
          </span>
        </div>
        <p class="text-gray-500 text-base">
          Professional gardening services to transform your outdoor space into a beautiful and sustainable environment.
        </p>
        <div class="flex space-x-6">
          {
            socialLinks.map((item) => (
              <a href={item.href} class="text-gray-400 hover:text-primary">
                <span class="sr-only">{item.name}</span>
                <i class={`fab fa-${item.icon} text-xl`}></i>
              </a>
            ))
          }
        </div>
      </div>
      
      <div class="mt-12 grid grid-cols-2 gap-8 xl:mt-0 xl:col-span-2">
        <div class="md:grid md:grid-cols-3 md:gap-8">
          {
            footerLinks.map((section) => (
              <div class="mt-12 md:mt-0">
                <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase">
                  {section.title}
                </h3>
                <ul role="list" class="mt-4 space-y-4">
                  {
                    section.links.map((item) => (
                      <li>
                        <a 
                          href={item.href} 
                          class="text-base text-gray-500 hover:text-primary"
                        >
                          {item.name}
                        </a>
                      </li>
                    ))
                  }
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </div>
    
    <div class="mt-12 border-t border-gray-200 pt-8">
      <p class="text-base text-gray-400 text-center">
        &copy; {currentYear} GreenLeaf Gardening Services. All rights reserved.
      </p>
      <p class="text-sm text-gray-500 text-center mt-2">
        Made with ❤️ for beautiful gardens
      </p>
    </div>
  </div>
</footer>
