---
import Layout from '../layouts/Layout.astro';

const title = 'Our Services';
const description = 'Explore our comprehensive range of professional gardening and landscaping services to transform your outdoor space.';

const services = [
  {
    title: 'Lawn Care',
    icon: 'fa-grass',
    description: 'Regular mowing, edging, aeration, and fertilization to keep your lawn healthy and vibrant throughout the year.',
    features: [
      'Weekly/Bi-weekly mowing',
      'Edging and trimming',
      'Aeration and overseeding',
      'Fertilization and weed control',
      'Pest and disease management'
    ]
  },
  {
    title: 'Garden Design',
    icon: 'fa-seedling',
    description: 'Custom garden designs that reflect your personal style and enhance your outdoor living experience.',
    features: [
      'Initial consultation and site analysis',
      'Custom planting plans',
      'Hardscape design',
      'Water feature design',
      'Lighting design'
    ]
  },
  {
    title: 'Landscaping',
    icon: 'fa-tree',
    description: 'Complete landscape solutions including installation, renovation, and maintenance of outdoor spaces.',
    features: [
      'Garden installation',
      'Patio and pathway construction',
      'Retaining walls',
      'Irrigation systems',
      'Seasonal cleanups'
    ]
  },
  {
    title: 'Tree & Shrub Care',
    icon: 'fa-tree-alt',
    description: 'Professional tree and shrub maintenance to ensure the health and beauty of your landscape.',
    features: [
      'Pruning and trimming',
      'Disease and pest management',
      'Tree removal',
      'Stump grinding',
      'Cabling and bracing'
    ]
  },
  {
    title: 'Irrigation',
    icon: 'fa-tint',
    description: 'Efficient watering solutions to keep your landscape healthy while conserving water.',
    features: [
      'System design and installation',
      'Drip irrigation',
      'Smart controllers',
      'System maintenance',
      'Seasonal startup and winterization'
    ]
  },
  {
    title: 'Seasonal Services',
    icon: 'fa-calendar-alt',
    description: 'Specialized services to prepare your garden for each season.',
    features: [
      'Spring cleanup',
      'Summer maintenance',
      'Fall cleanup',
      'Winter preparation',
      'Holiday lighting'
    ]
  }
];
---

<Layout {title} {description}>
  <!-- Hero Section -->
  <section class="relative bg-green-700 text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Our Services</h1>
      <p class="text-xl md:text-2xl max-w-3xl mx-auto">
        Comprehensive gardening and landscaping solutions for your home or business
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">What We Offer</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We provide a complete range of professional gardening and landscaping services to meet all your outdoor needs.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
            <div class="p-6">
              <div class="w-14 h-14 bg-green-100 rounded-full flex items-center justify-center mb-4">
                <i class={`fas ${service.icon} text-2xl text-green-600`}></i>
              </div>
              <h3 class="text-xl font-bold mb-2">{service.title}</h3>
              <p class="text-gray-600 mb-4">{service.description}</p>
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-start">
                    <i class="fas fa-check text-green-500 mt-1 mr-2"></i>
                    <span class="text-gray-700">{feature}</span>
                  </li>
                ))}
              </ul>
              <div class="mt-6">
                <a 
                  href="/contact" 
                  class="inline-block text-green-600 font-medium hover:text-green-700"
                >
                  Learn more â†’
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Our Process</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We follow a simple, transparent process to ensure your complete satisfaction
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 max-w-5xl mx-auto">
        <!-- Step 1 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-green-600">1</span>
          </div>
          <h3 class="text-lg font-semibold mb-2">Consultation</h3>
          <p class="text-gray-600">We discuss your needs and vision for your outdoor space.</p>
        </div>

        <!-- Step 2 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-green-600">2</span>
          </div>
          <h3 class="text-lg font-semibold mb-2">Design</h3>
          <p class="text-gray-600">We create a customized plan tailored to your preferences.</p>
        </div>

        <!-- Step 3 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-green-600">3</span>
          </div>
          <h3 class="text-lg font-semibold mb-2">Implementation</h3>
          <p class="text-gray-600">Our skilled team brings the design to life with precision.</p>
        </div>

        <!-- Step 4 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-green-600">4</span>
          </div>
          <h3 class="text-lg font-semibold mb-2">Maintenance</h3>
          <p class="text-gray-600">We provide ongoing care to keep your landscape beautiful.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-primary py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to transform your outdoor space?</h2>
      <p class="text-xl text-white mb-8 max-w-2xl mx-auto">
        Contact us today to discuss your project and receive a free, no-obligation quote.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a 
          href="/contact" 
          class="bg-white text-primary font-medium px-8 py-3 rounded-lg hover:bg-gray-100 transition-colors"
        >
          Get Your Free Quote
        </a>
        <a 
          href="tel:+1234567890" 
          class="bg-transparent border-2 border-white text-white font-medium px-8 py-3 rounded-lg hover:bg-white hover:bg-opacity-10 transition-colors"
        >
          <i class="fas fa-phone-alt mr-2"></i> (123) 456-7890
        </a>
      </div>
    </div>
  </section>
</Layout>
